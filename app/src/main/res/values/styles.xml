<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance" />

    <style name="TextAppearance.AppTheme" />

    <style name="TextAppearance.AppTheme.Toolbar" />

    <style name="TextAppearance.AppTheme.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="navigationIcon">@drawable/baseline_arrow_back_ios_white_24</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppTheme.Toolbar.Title</item>
    </style>

</resources>
